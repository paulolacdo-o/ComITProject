@model OurFiction.Models.Story

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Story</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoryId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="control-label"></label>
                <textarea asp-for="Synopsis" class="form-control textarea-more-width" rows="5"></textarea>
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="FragCount" value="@Model.FragCount" />
            <div class="form-group">
                <label asp-for="InitialContent" class="control-label"></label>
                <textarea asp-for="InitialContent" class="form-control textarea-more-width" rows="5"></textarea>
                <span asp-validation-for="InitialContent" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IsActive" value="@Model.IsActive" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
